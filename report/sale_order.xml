<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<template id="report_assets_common_custom_fonts" name="Custom QWeb fonts" inherit_id="web.report_assets_common">
			<xpath expr="." position="inside">
				<link href="Al-Shifaa/static/src/css/main.css" rel="stylesheet" type="text/css"/>
			</xpath>
		</template>



		<!-- HEADER TEMPLATE -->
		<template id="custom_external_layout">

			<t t-foreach="docs" t-as="o">
				<t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
				<!-- HEADER -->
				<div t-attf-class="header o_company_#{o.company_id.id}_layout"  style="border-bottom:solid 1px black;direction:ltr;">

					<div class="mt12 row" id="informations" style="width:100%;font-size: 30px;">

						<div class="text-left mt32" style="width: 40%;">

							<div t-if="o.company_id.id== 4" align="left">
								<h2>AlSHIFA Al-Da'em</h2>
								<h6>
									AlSHIFA Al-Da'em DrugStore
								</h6>
							</div>

							<div t-if="o.company_id.id==7" align="left">
								<h2>Alshifa Alnajaf
								</h2>
							</div>

							<div t-if="o.company_id.id==6" align="left">
								<h2>Alshifa Basra
								</h2>
							</div>


							<div t-if="o.company_id.id==3" align="left">
								<h2>ALSHIFA Pharma
								</h2>
								<h6>
									ALSHIFA Pharma Scientific Drug Bureau
								</h6>
							</div>



							<div t-if="o.company_id.id==5" align="left">
								<h2>Tops Alitqan
								</h2>
							</div>


							<div t-if="o.company_id.id==2" align="left">
								<h2>ALSHIFA</h2>
								<h6>
									ALSHIFA Scientific Drug Bureau
								</h6>
							</div>


							<div t-if="o.company_id.name == 'Erbil'" align="left">
								<h2>Erbil 	</h2>
								<h6>
									Tops Al Itkan Company for supplies Drugs
								</h6>
							</div>



							<div t-if="o.company_id.name == 'Shkoy Newroz'" align="left">
								<h2>Shky Newroz</h2>
								<h6>
									Shky Newroz DrugStore
								</h6>
							</div>

						</div>




						<div class="text-center" style="margin-top: 0px; width: 25%;">
							<img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="img" alt="Logo" style="max-width: 150px; min-width: 50px; max-height: 130px;"/>
						</div>



						<div class="text-right mt32" style="width: 35%; margin-right: 10px;">

							<div t-if="o.company_id.id==4">
								<h2 align="right">الشفاء الدائم</h2>
								<h6 align="right">مذخر ادوية الشفاء الدائم</h6>
							</div>

							<div t-if="o.company_id.id==7">
								<h2 align="right">
									دائم النجف
								</h2>
							</div>


							<div t-if="o.company_id.id==6">
								<h2 align="right">
									دائم البصرة
								</h2>
							</div>


							<div t-if="o.company_id.id==3">
								<h2 align="right">الشفاء فارما</h2>
								<h6 align="right">مكتب الشفاء فارما العلمي لدعاية الادوية</h6>
							</div>

							<div t-if="o.company_id.id==5">
								<h2 align="right">قمة الاتقان</h2>
							</div>


							<div t-if="o.company_id.id==2">
								<h2 align="right">الشفاء</h2>
								<h6 align="right">مكتب الشفاء العلمي لدعاية الادوية</h6>
							</div>

							<div t-if="o.company_id.name == 'Erbil'">
								<h2 align="right">اربيل</h2>
								<h6 align="right">شركة قمة الاتقان للادوية  و المستحضرات الطبية</h6>
							</div>
							<div t-if="o.company_id.name == 'Shkoy Newroz'">
								<h2 align="right">Shky Newroz</h2>
								<h6 align="right">
									كوكاى ده رمانى شكوى نه وروز
								</h6>
							</div>
						</div>
						<!-- Duplicate logo and english title to solve right to left issue -->

						<t t-if="doc.partner_id.lang == 'ar_001'">

							<div class="text-center" style="margin-top: 0px; width: 25%;">
								<img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="img" alt="Logo" style="max-width: 150px; min-width: 50px; max-height: 130px;"/>
							</div>
						</t>
					</div>
				</div>

				<div t-attf-class="article o_report_layout_standard o_company_#{o.company_id.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
					<t t-call="web.address_layout"/>
					<t t-raw="0"/>
				</div>



				<!-- FOOTER -->

				<div class="footer o_standard_footer" style="border-top:solid 1px black;direction:ltr;">
					<div class="row" style="width: 100%;direction:ltr;">
						<div style="width: 50%;">
							<p align="left" t-if="o.company_id.name == 'alshifa'">
								Address :  Iraq - Baghdad - Hai ALWihda 	<br/>
								Sec 904 - st.58 - House 23
							</p>

							<p align="left" t-if="o.company_id.name == 'Alshifa Pharma'">
								Address : Iraq - Baghdad - Hai ALWihda 	<br/>
								Sec 904 - st.17 - House 23/1
							</p>

							<p align="left" t-if="o.company_id.name == 'Alshifa Aldaem'">
								Address :  Iraq - Baghdad - Hai ALWihda<br/>
								Sec 904 - st.58 - House 23
							</p>

							<p align="left" t-if="o.company_id.name == 'Erbil' or o.company_id.name == 'Shkoy Newroz'">
								Address : Iraq - Erbil
								<br/>
								Mustawfi street/Arab, house num 548/5 second floor
							</p>

							<p align="left">
								<t t-if="o.company_id.phone">
									Mobile: <span t-field="o.company_id.phone"/>
								</t>
								<br/>
								E-mail: <span t-field="o.company_id.email"/>
							</p>

						</div>

						<div class="" style="width: 50%;direction:ltr;">
							<p align="right" t-if="o.company_id.name == 'alshifa'">
								العنوان :
								العراق - بغداد حي الوحدة<br/>
								محلة ٩٠٤-شارع ٥٨ بناية ٣٢
							</p>

							<p align="right" t-if="o.company_id.name == 'Alshifa Pharma'">
								العنوان :
								العراق - بغداد حي الوحدة <br/>
								محلة ٩٠٤- زقاق ١٧ رقم العقار ٣٢\١
							</p>

							<p align="right" t-if="o.company_id.name == 'Alshifa Aldaem'">
								العنوان :
								العراق - بغداد حي الوحدة<br/>
								محلة ٩٠٤-شارع ٥٨ بناية ٣٢
							</p>

							<p align="right" t-if="o.company_id.name == 'Erbil'">
								العنوان :
								عيراق - هه ولير	 <br/>
								<br/>
								كه رةكي مستوفي\عه ره ب-خانوو زماره ٥٠\٥٤٠ نهومي يه كه م
							</p>

							<p align="right" t-if="o.company_id.name == 'Erbil' or o.company_id.name == 'Shkoy Newroz'">
								العنوان :
								عيراق - هه ولير	 <br/>
								<br/>
								كه رةكي مستوفي\عه ره ب-خانوو زماره ٥٠\٥٤٨ نهومي يه كه م
							</p>

							<p align="right">
								<t t-if="o.company_id.phone">
									هاتف: <span align="left" t-field="o.company_id.phone"/>
								</t>
								<br/>
								البريد الإلكتروني: <span t-field="o.company_id.email"/>
							</p>
						</div>



					</div>
				</div>
			</t>
		</template>


		<!-- MAIN TEMPLATE  -->
		<template id="shifaa_saleorder_report" inherit_id="sale.report_saleorder_document">

			<xpath expr="//t[@t-call='web.external_layout']" position="attributes">
				<attribute name="t-call">Al-Shifaa.custom_external_layout</attribute>
			</xpath>

			<xpath expr="//div[@t-field='doc.partner_id']" position="replace">
				<div class="row">
					<div align="right" t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
				</div>
			</xpath>


			<xpath expr="//td[@name='td_name']" position="attributes">
				<attribute name="style">direction: ltr;</attribute>
			</xpath>


			<xpath expr="//div[@name='so_total_summary']" position="before">
				<div class="row col-6" style="margin-bottom: -80px; margin-top: 80px;">

					<table class="table table-sm text-center">
						<tr class="border-black o_subtotal">
							<td><strong>Previous Costumer debit</strong></td>
							<td class="text-right">
								<span t-field="doc.partner_id.total_due"/>
							</td>
						</tr>
						<tr class="border-black o_total">
							<td><strong>Current Costumer debit</strong></td>
							<td class="text-right">
								<span t-field="doc.current_customer_debit"/>
							</td>
						</tr>
					</table>

				</div>
			</xpath>

			<xpath expr="//div[@name='so_total_summary']" position="after">
				<table class="table table-sm o_main_table" style="margin-top:300px;">
					<thead>
						<tr>
							<th >Accountant</th>
							<th>Salesman</th>
							<th>Manager</th>
							<th>Warehouse</th>
							<th>Client</th>
						</tr>
					</thead>
				</table>
			</xpath>


			<xpath expr="//div[@id='informations']//div[@t-if='doc.user_id.name']" position="after" class="ml-8 float-right">
				<div t-if="doc.warehouse_location_id.location_id" class="col-auto mw-100 mb-2">
					<strong>Warehouse:</strong>
					<p t-field="doc.warehouse_location_id.location_id"/>
				</div>
			</xpath>

			<xpath expr="//table[hasclass('o_main_table')]//th[@name='th_description']" position="after">
				<th name="th_lot" class="text-center">Batch</th>
				<th name="th_expire" class="text-center">Expiration Date</th>
			</xpath>
			<xpath expr="//table[hasclass('o_main_table')]//td[@name='td_quantity']" position="before">
				<td class="text-center">
					<span t-field="line.lot_id" />
				</td>
				<td class="text-center">
					<span t-field="line.lot_id.life_date" />
				</td>
			</xpath>
		</template>




	</data>
</odoo>