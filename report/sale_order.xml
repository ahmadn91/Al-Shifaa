<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

   
        <!-- HEADER TEMPLATE -->
  <template id="custom_external_layout">
		<t t-foreach="docs" t-as="o">
	        <div t-attf-class="header o_company_#{o.company_id.id}_layout" style="border-bottom:solid 1px black;">
	             <div class="row mt32 mb32" id="informations" style="font-family: Arial, serif;">
					<div align="left" class="col-5">
	                <p t-if="o.company_id.name == 'Alshifa Aldaem'"> الشفاء الدائم
						<br/>
						مذخر ادوية الشفاء الدائم 
					</p>
	                <p t-if="o.company_id.name == 'Alshifa Alnajaf'" > دائن النجف</p>
	                <p t-if="o.company_id.name == 'Alshifa Basra'" > دائن البصرة</p>
	                <p t-if="o.company_id.name == 'Alshifa Pharma'" > 
					الشفاء فارما
					<br/>
					مكتب الشفاء فارما العلمي لدعاية الادوية</p>
				    <p t-if="o.company_id.name == 'Tops Alitqan'" > توب الاتقان</p>
	                <p t-if="o.company_id.name == 'alshifa'" > الشفاء
					<br/> مكتب الشفاء العلمي لدعاية الادوية </p>
	                <p t-if="o.company_id.name == 'Erbil'" > اربيل 
						<br/>
						 شركة قمة الاتقان للادوية  و المستحضرات الطبية
					</p>
<p t-if="o.company_id.name == 'Shkoy Newroz'" > Shky Newroz 
						<br/>
كوكاى ده رمانى شكوى نه وروز
					</p>


	                <p t-if="o.company_id.name == 'My Company (San Francisco)'" > العام</p>
	            	</div>


	                <div align="center" class="col-2 text-center">
	                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="img" alt="Logo" style="width: 132px;"/>
                    </div>

	                <div align="center" class="col-5">
                     <p t-field="o.company_id.name"></p>
	                </div>
				    <div style="border-bottom: 1px solid black; border-top:none"/>
	            </div>
	        </div>
         
	        <div t-attf-class="article o_report_layout_standard o_company_#{o.company_id.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
	            <t t-call="web.address_layout"/>
	            <t t-raw="0"/>
	        
			</div>
	    



       <div class="footer o_standard_footer" style="border-top:solid 1px black;">
	            <div class="row" id="informations">
					<div align="center" class="col-5 text-left">
						<p t-if="o.company_id.name == 'Alshifa' or o.company_id.name == 'alshifa'">  
						العنوان :<span t-field="o.company_id.street">العراق - بغداد حي الوحدة</span>
						<br/>
						<span t-field="o.company_id.street2">محلة ٩٠٤-شارع ٥٨ بناية ٣٢</span>
					</p>

	              <p t-if="o.company_id.name == 'Alshifa Pharma'">  
						<span t-field="o.company_id.street">العراق - بغداد حي الوحدة</span>
						<span t-field="o.company_id.street2"> محلة ٩٠٤- زقاق ١٧ رقم العقار ٣٢\1    </span>
					</p>

						<p t-if="o.company_id.name == 'Alshifa Aldaem'">  
						<span t-field="o.company_id.street">العراق - البصرة - الجزائر - مقابل مطعم باربيكو المتنقل   </span>
						<span t-field="o.company_id.street2"></span>
					</p>

					<p t-if="o.company_id.name == 'Erbil'">  
						<span t-field="o.company_id.street">عيراق - هه ولير</span>
						<span t-field="o.company_id.street2">  ٥٠\٥٤٠ نهومي يه كه م  كه رةكي مستوفي\عه ره ب-خانوو زماره  </span>
					</p>

					<p t-if="o.company_id.name == 'Alshifa Aldaem'">  
						<span t-field="o.company_id.street">العراق - بغداد حي الوحدة</span>
						<span t-field="o.company_id.street2">محلة ٩٠٤-شارع ٥٨ بناية ٣٢</span>
					</p>
				
					<p>
		             هاتف :<span t-field="o.company_id.phone"/>	
					 </p>
					 <p class="mb12"> 
					  البريد الإلكتروني:<span t-field="o.company_id.email"/>
					 </p>

				  </div>
	            
					<div class="col-2 text-center " align="center"/>
				
					<div align="center" class="col-5 text-justify">
	                 <p> 
                     <span t-field="o.company_id.street"/>
					    <span t-field="o.company_id.street2"/>  <br/>
		                 	Mobile:<span t-field="o.company_id.phone"/><br/>
		                  	E-mail:<span t-field="o.company_id.email"/><br/>
		                   	Website:<span t-field="o.company_id.website"/> <br/>
	                   </p>
                   </div>
				</div>
			</div>
			</t>
    </template>


          <!-- MAIN TEMPLATE  -->

      <template id="shifaa_report" inherit_id="sale.report_saleorder_document">
               <xpath expr="//div[@t-field='doc.partner_id']" position="replace">
               </xpath> 
                  
               <xpath expr="//t[@t-call='web.external_layout']" position="attributes"  >
                <attribute name="t-call">Al-Shifaa.custom_external_layout</attribute>
               </xpath> 
			 
			   <xpath expr="//div[@name='so_total_summary']" position="after" >
					<strong style="margin-top:300px;"> Costumer debit <p t-field="doc.customer_debit"/>   </strong>


					<table class="table table-sm o_main_table" style="margin-top:300px;">
						<thead>
						<tr>
						<th >Accountent</th>
						<th>Salesman</th>
						<th>Manager</th>
						<th>Warehouse</th>
						<th>Client</th>
						</tr>
						</thead>
						</table>

			   </xpath>
			  

                <xpath expr="//div[@id='informations']//div[@t-if='doc.user_id.name']" position="after" class="ml-8 float-right">
				  <strong>
                    Warehouse:  
                  </strong>
                 <br/> <p t-field="doc.warehouse_location_id.location_id"></p>
                </xpath> 
				<xpath expr="//table[hasclass('o_main_table')]//th[@name='th_description']" position="after">
					<th name="th_lot" class="text-center">Batch</th>
				</xpath> 
				<xpath expr="//table[hasclass('o_main_table')]//td[@name='td_quantity']" position="before">
				  <td class="text-center">
				   <span t-field="line.lot_id" />
				   </td>
				</xpath> 
  </template>
  </data>
</odoo>
