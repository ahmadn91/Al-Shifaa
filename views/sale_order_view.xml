<odoo>
  <data>
    
    <record id="sale_order_line_form_inherit" model="ir.ui.view">
      <field name="name">sale.order.line.form.inherit</field>
      <field name="model">sale.order.line</field>
      <field name="inherit_id" ref="sale_order_multi_lot.sale_order_line_lot_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='lot_id']" position="attributes">
          <attribute name="domain">[('product_id', '=', product_id), ('open_qty', '>', qty)]</attribute>  
        </xpath>
      </field>
    </record>

  </data>
</odoo>